[Unit]
Description=Server Status Client
After=network.target

[Service]
Type=simple
User=nobody
Restart=on-failure
RestartSec=5s
ExecStart=/Your/Path/To/client -p 36580 -L /tmp/statusclient.log -level error -k yourPassword -n "Server Name" -l "Server Location" -s example.your.domain

[Install]
WantedBy=multi-user.target